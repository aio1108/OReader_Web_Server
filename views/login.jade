div#loginBlock.modal.fade(tabindex='-2', role='dialog', aria-labelledby='loginBlockLabel', aria-hidden='true')
	div.modal-dialog
		div.modal-content
			div.modal-header
				button.close(type='button', data-dismiss='modal' aria-hidden='true') &times;
				h4#myModalLabel.modal-title 登入
			div.modal-body
				form(role='form', action='login', method='post')
					div.form-group
						label(for='userid') 帳號
						input#userid.form-control(type='email', name='userid', placeholder='輸入帳號...')
					div.form-group
						label(for='userpwd') 密碼
						input#userpwd.form-control(type='password', name='userpwd', placeholder='輸入密碼...')
					button.btn.btn-primary(type='submit') 送出